<%- include("partials/header") -%>
<h1>Home</h1>
<% allPosts.forEach(function(post){ %>
  <% let homeBody = post.postBody; %>
  <% if(homeBody.length > 100){ %>
    <% let postBody = post.postBody.substring(100,post.postBody.length); %>
    <%  homeBody = homeBody.substring(0,100);%>
    <h2><%= post.title %></h2>
    <p><%= homeBody %> <span> ...</span><a href="/posts/<%=post.title%>"> Read More</a></p>
<%  }else{ %>
    <h2><%= post.title %></h2>
    <p><%= homeBody %></p>
<% }}); %>
<%- include("partials/footer") -%>
